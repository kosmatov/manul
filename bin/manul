#!/usr/bin/env ruby

require 'manul'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.on "--host HOST", "Host HOST" do |host|
    options[:host] = host
  end

  opts.on "--port PORT", "Port PORT" do |port|
    options[:port] = port
  end

  opts.on "--path PATH", "Path PATH" do |path|
    options[:path] = path
  end

  opts.on "--cgi_path PATH", "CGI PATH" do |path|
    options[:cgi_path] = path
  end

  opts.on "--cgi_alias PATH", "CGI alias PATH" do |path|
    options[:cgi_alias] = path
  end
end.parse!

server = Manul::Server.new options
p server.inspect
server.start
